extends layout

block content
	h1 Author: #{author.family_name}, #{author.first_name}
	p #{author.date_of_birth} - #{author.date_of_death}

	div
		<span style="font-size: small; margin-right: 0.5ex" class="glyphicon glyphicon-trash" aria-hidden="true"></span>
		a(href=author.url + "/delete" style="font-size: small") Delete Author
		hr

	<div style="padding-left: 3em">
		h3 Books

		each book in book_list
			p
				a(href=book.url) #{book.title}
			p= book.summary

		else
			p There are no books of this author.
	</div>

	